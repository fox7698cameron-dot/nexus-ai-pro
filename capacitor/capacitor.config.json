{
  "appId": "com.cameronfox.nexusaipro",
  "appName": "Nexus AI Pro",
  "webDir": "dist",
  "server": {
    "androidScheme": "https",
    "iosScheme": "https",
    "hostname": "app.nexusai.pro",
    "allowNavigation": [
      "https://*.nexusai.pro",
      "https://api.anthropic.com",
      "https://api.openai.com",
      "https://generativelanguage.googleapis.com"
    ]
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "launchAutoHide": true,
      "backgroundColor": "#0A0A0C",
      "androidSplashResourceName": "splash",
      "androidScaleType": "CENTER_CROP",
      "showSpinner": false,
      "androidSpinnerStyle": "large",
      "iosSpinnerStyle": "small",
      "spinnerColor": "#8B5CF6",
      "splashFullScreen": true,
      "splashImmersive": true
    },
    "StatusBar": {
      "style": "dark",
      "backgroundColor": "#0A0A0C"
    },
    "Keyboard": {
      "resize": "body",
      "style": "dark",
      "resizeOnFullScreen": true
    },
    "Haptics": {},
    "LocalNotifications": {
      "smallIcon": "ic_stat_icon_config_sample",
      "iconColor": "#8B5CF6"
    },
    "PushNotifications": {
      "presentationOptions": ["badge", "sound", "alert"]
    },
    "Biometric": {},
    "SecureStorage": {},
    "Camera": {},
    "Filesystem": {},
    "Share": {},
    "App": {
      "windowBackground": "#0A0A0C"
    }
  },
  "cordova": {},
  "android": {
    "allowMixedContent": true,
    "captureInput": true,
    "webContentsDebuggingEnabled": false,
    "minWebViewVersion": 89,
    "versionCode": 1,
    "versionName": "2.0.0",
    "buildOptions": {
      "keystorePath": "release-key.jks",
      "keystoreAlias": "nexus-ai-pro"
    }
  },
  "ios": {
    "scheme": "Nexus AI Pro",
    "contentInset": "automatic",
    "minVersion": "13.0",
    "preferredContentMode": "mobile"
  }
}
